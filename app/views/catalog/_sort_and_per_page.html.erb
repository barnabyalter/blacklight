<div class="well">

    <%= render :partial => "paginate_compact" %> 
      

  <div id="sort-dropdown" class="dropdown pull-right hidden-phone">
            <%= t('blacklight.search.sort.label') %>
           <a class="dropdown-toggle" data-toggle="dropdown" data-target="#">
              <%= current_sort_field.label %>
              <b class="caret"></b>
            </a>
            &nbsp;
            <ul id="menu2" class="dropdown-menu">
              <%- blacklight_config.sort_fields.each do |sort_key, field| %>
                <li>
                  <%= link_to field.label, url_for(params_for_search.merge(:sort => sort_key) ) %>
                </li>
              <%- end %>
            </ul>

    </div>



    <div id="per_page-dropdown" class="dropdown pull-right  hidden-phone">

            <a class="dropdown-toggle" data-toggle="dropdown" data-target="#"><%=@response.rows%>
              <b class="caret"></b>
            </a>
            <%= t('blacklight.search.per_page.post_label') %>        
            <ul id="menu1" class="dropdown-menu">
              <%- blacklight_config.per_page.each do |count| %>
              <li>
                <%= link_to count, url_for(params_for_search.merge(:per_page => count)) %>
              </li>
              <%- end %>
            </ul>

      </div>

</div>
